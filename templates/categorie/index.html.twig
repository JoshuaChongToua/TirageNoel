{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <h1>Catégorie ! ✅</h1>   

    <a class="btn btn-primary" href="{{ path('categorie_create')}}">Ajout</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">nom</th>
                <th scope="col">option</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td><a href="{{ path('categorie_show', {id: categorie.id})}}">{{categorie.nom}}</a></td>
                    <td><a class="btn btn-primary" href="{{ path('categorie_edit', {id: categorie.id})}}">Modifier</a>
                        <form action="{{ path('categorie_delete', {id: categorie.id})}}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger" >Supprimer</button></td>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
