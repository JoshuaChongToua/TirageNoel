{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>   
    
    <a class="btn btn-primary" href="{{ path('role_create')}}">Ajout</a>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">nom</th>
            <th scope="col">option</th>
        </tr>
    </thead>
    <tbody>
        {% for role in roles %}
            <tr>
                <td><a href="{{ path('role_view', {id: role.id})}}">{{role.id}}</a></td>
                <td>{{role.name}}</td>
                <td><a class="btn btn-primary" href="{{ path('role_edit', {id: role.id})}}">Modifier</a>
                    <form action="{{ path('role_delete', {id: role.id})}}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger" >Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
